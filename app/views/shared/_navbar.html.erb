<div class="navbar-wagon">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= image_tag "logo.png" %>
  <% end %>

  <!-- Right Navigation -->
  <div class="raw">
  <div class="navbar-wagon-right hidden-xs hidden-sm">
      <%= link_to t(".top_call_to_action", default: "Mediateur "), class: "navbar-wagon-item navbar-wagon-button btn" %>
       |
      <%= link_to t(".top_call_to_action", default: "Contact"), class: "navbar-wagon-item navbar-wagon-button btn" %>
